general {
    output_format = "i3bar"
    colors = true
    color_good = "#a3be8c"
    color_bad  = "#bf616a"
    color_degraded = "#ebcb8b"
    interval = 5
    separator = "|"
}

order += "read_file POMOS"
read_file POMOS {
    format = "%content"
    format_bad = ""
    path = "/tmp/pomos"
}

order += "ethernet _first_"
ethernet _first_ {
    format_up = "E: %ip (%speed)"
    format_down = "E: down"
}

order += "wireless _first_"
wireless _first_ {
    format_up = "W: %ip (%quality @ %essid)"
    format_down = "W: down"
}

order += "path_exists TS"
path_exists TS {
    # path exists when vpn is active
    path = "/proc/sys/net/ipv4/conf/tailscale0"
}

